#include <bits/stdc++.h>
using namespace std;
int chanle(int n){
    if(n%2==0){
        return n/2;
    }else{
    return (n-1)/2;}
}
int main(){
    int n,p;
    cin >> n >> p;
    if(n%2==1){
        if(p==(n+1)/2){
            cout << (p-1)/2;
        }else if(p<(n+1)/2){
            cout << chanle(p);
    }else{
    cout << chanle(n-p);}
}else{
    if(p<=(n+1)/2){
        cout << chanle(p);
    }else{
    int t=n-p;
    if(t%2==1){
        cout << t;
    }else{
    cout << t/2;}
    }}
}
