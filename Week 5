#include <bits/stdc++.h>
using namespace std;
int max(int const a[], int n){
    int max=a[0];
    for(int i=1;i<n;i++){
        if(a[i]>max){
            max=a[i];
        }
    }
    return max;
}
int main(){
    int n;
    cin >> n;
    int a[n];
    for(int i=0;i<n;i++){
        cin >> a[i];
    }
    sort(a,a+n);
    int s[n];
    for(int i=0;i<n;i++){
        s[i]=1;
    }
    int t=0;
    for(int i=1;i<n;i++){
        if(a[i]==a[i-1]){
            s[t]++;
        }else{
        t++;}
    }
    cout << n-max(s,t);}

