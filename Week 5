#include <bits/stdc++.h>
using namespace std;
int chanle(int n){
    if(n%2==0){
        return n/2;
    }else{
    return (n-1)/2;}
}
int main(){
    int n,p;
    cin >> n >> p;
    if(n%2==1){
        if(p==(n+1)/2){
            cout << (p-1)/2;
        }else if(p<(n+1)/2){
            cout << chanle(p);
    }else{
    cout << chanle(n-p);}
}else{
    if(p<=(n+1)/2){
        cout << chanle(p);
    }else{
    int t=n-p;
    if(t%2==1){
        cout << t;
    }else{
    cout << t/2;}
    }}
}
2.
#include<bits/stdc++.h>
using namespace std;
int main(){
   int n;
   cin >> n;
   int a[n],s[n];
   for(int i=0;i<n;i++){
       cin >> a[i];
   }
   s[0]=1;
   sort(a,a+n);
   int t=0;
   for(int i=0;i<n-1;i++){
       if(a[i]==a[i+1]){
           s[t]++;
       }else{
           t++;
           s[t]=1;
       }
}
sort(s,s+t+1);
cout << n- s[t];}

